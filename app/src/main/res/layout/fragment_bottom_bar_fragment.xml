<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.reuth.hack.textdisrupt.BottomBarFragment"
    tools:showIn="@layout/activity_single_word">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scrollView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">

        <HorizontalScrollView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btn_add_borders"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="מסגור טקטס" />

                <Button
                    android:id="@+id/btn_change_font"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="שינוי פונט" />

                <Button
                    android:id="@+id/btn_change_size_smaller"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הקטן טקסט" />

                <Button
                    android:id="@+id/btn_change_size_bigger"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הגדל טקסט" />

                <Button
                    android:id="@+id/btn_change_line_spacing_smaller"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הקטן מרווח שורות" />

                <Button
                    android:id="@+id/btn_change_line_spacing_bigger"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הגדל מרווח שורות" />

                <Button
                    android:id="@+id/btn_emphasize_text"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הדגשות" />

                <Button
                    android:id="@+id/btn_text_to_speach"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הקראה" />

                <Button
                    android:id="@+id/btn_unvowels"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="הסר ניקוד" />

                <Button
                    android:id="@+id/btn_finger_paint"
                    android:layout_width="80dip"
                    android:layout_height="80dip"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/bottom_bar_menu"
                    android:layout_margin="2dp"
                    android:text="צייר" />

            </LinearLayout>
        </HorizontalScrollView>
    </ScrollView>

</android.support.constraint.ConstraintLayout>
